<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <%= form_for(@article) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_field :content, class: 'form-control' %>
        </div>

        <%= f.submit  class: 'btn btn-primary'%>
      <% end %>
    </div>
  </div>
</div>
